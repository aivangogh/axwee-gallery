                                    <img src="<%- post.img %>" class="d-block w-100" alt="<%- post.title %>"
                                        style="height: 25rem; object-fit: cover;" />
                                    <div class="carousel-caption d-none d-md-block">
                                        <h5>
                                            <%- post.title %>
                                        </h5>
                                        <p>
                                            <% postUser.forEach(user=> {%>
                                                <% let userId=JSON.stringify(user._id) %>
