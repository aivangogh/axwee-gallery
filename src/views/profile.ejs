<% title="Profile" %>
    <div class="container-fluid py-5 px-3">
        <div class="row py-5 px-4">
            <div class="col-md-10 mx-auto">
                <!-- Profile widget -->

                <div class="row">
                    <div class="col-5 shadow py-5 px-4 rounded">

                        <div class="d-flex row align-items-center justify-content-center">
                            <div class="col">
                                <!-- To make the profile center. 3 col needed -->
                            </div>
                            <div class="col-5">
                                <img src="<%= user.img.profile %>" height="150" width="150" style="object-fit: cover;"
                                    class="rounded-circle border border-5 border-white">
                            </div>
                            <div class="col edit-profile">
                                <a class="btn btn-primary btn-sm btn-rounded" href="/edit-profile" role="button">Edit
                                    profile</a>
                            </div>

                        </div>
                        <div class="d-flex row user-info text-center mt-3">
                            <div class="col d-flex flex-column justify-content-end media-body text-white mx-4 mb-2">
                                <h4 class="text-dark mb-2">
                                    <%- user.firstName%>
                                        <%- user.lastName %>
                                </h4>
                                <p class="text-dark"><span>
                                        <%-"@" + user.username %>
                                    </span></p>
                            </div>
                        </div>
                        <div class=" user-bio mt-3">
                            <h5 class="text-center"><em>Bio</em></h5>
                            <div class="p-4 rounded shadow-sm bg-light">
                                <p class="font-italic mb-0">
                                    <%- user.bio %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-7 overflow-y">
                        <div class="pt-4 px-4 text-center recent-post mb-3">
                            <h2 class="mb-0">Photos</h2>
                        </div>
                        <div class="row px-5 py-2">
                            <% post.forEach((post)=> { %>
                                <% let userId=JSON.stringify(user._id), authorId=JSON.stringify(post.authorId); %>
                                    <% if(userId==authorId) {%>
                                        <div class="col-5 mb-4">
                                            <div class="bg-white rounded shadow-sm">
                                                <img src="<%- post.img%>" alt="" class="img-fluid card-img-top"
                                                    style="height: 12rem; width: 18rem; object-fit: cover;">
                                                <div class="px-3 py-4">
                                                    <h5>
                                                        <a href="#" class="text-dark">
                                                            <%- post.title %>
                                                        </a>
                                                    </h5>
                                                </div>
                                            </div>
                                        </div>


                                        <% }%>

                                            <% }) %>
